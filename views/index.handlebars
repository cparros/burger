<h1 style="text-align: center;">Yummy Yummy Burgers!</h1>

<img src="/assets/images/Burger.png" class="img-fluid" style="height: 25%; width: 25%; display: block; margin-left:auto; margin-right:auto; margin-top:20px;"/>

<div class="container">

  <div class="row">
    <div class="col-md-6">
<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burger}}
  {{#unless devoured}}
  {{> burgers/burger-block devoured=false}}
  {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-md-6">
<h2>Burgers that are devoured!</h2>
  
<ul>
  {{#each burger}}
  {{#if devoured}}
  {{> burgers/burger-block devoured=true}}
  {{/if}}
  {{/each}}
</ul>
</div>

</div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-6">
<h2>Add a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <button class=" btn btn-warning" id="create-button" type="submit" style="margin-top: 10px;">Add Burger</button>
</form>
</div>
</div>
</div>